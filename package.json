{
	"name": "spike-graphql-linter",
	"version": "1.3.1",
	"description": "spike for graphql linter and precommit hook",
	"scripts": {
		"graphql-schema-linter": "graphql-schema-linter",
		"prettier": "prettier --write . ",
		"test": "mocha tests/test*.js",
		"prepare": "rm -rf lib/* && babel ./src --ignore tests --out-dir ./lib"
	},
	"main": "src/index.js",
	"bin": {
		"spike-graphql-linter": "src/cli.js"
	},
	"pkg": {
		"scripts": "lib/**/*.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/oOhyeahh/spike-graphql-linter.git"
	},
	"keywords": [
		"graphql-schema-linter"
	],
	"author": "Oliver Ye",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/oOhyeahh/spike-graphql-linter/issues"
	},
	"homepage": "https://github.com/oOhyeahh/spike-graphql-linter#readme",
	"dependencies": {
		"change-case": "^4.1.1",
		"graphql": "^15.1.0",
		"graphql-schema-linter": "^2.0.1"
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": {
						"node": "12.18.3"
					}
				}
			]
		]
	},
	"prettier": {
		"trailingComma": "es5",
		"tabWidth": 4,
		"useTabs": true,
		"semi": false,
		"singleQuote": true
	},
	"devDependencies": {
		"@babel/cli": "^7.8.4",
		"@babel/core": "^7.9.0",
		"@babel/preset-env": "^7.9.5",
		"@babel/register": "^7.9.0",
		"mocha": "8.2.1",
		"chai": "^4.2.0",
		"prettier": "2.2.1"
	}
}
